    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.js",
            "args": ["task1.2.1"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Bable Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.js",
            "args": ["task1.2"],
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
			"runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "BABEL_ENV": "debug"
            }
        }
    ]
}


